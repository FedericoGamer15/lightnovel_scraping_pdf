{
  "manifest_version": 3,
  "name": "Novel Scraper & PDF",
  "version": "1.0",
  "description": "Descarga novelas web a PDF autom√°ticamente.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png", 
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jspdf.min.js", "locales.js", "content.js"],
      "css": ["styles.css"]
    }
  ]

}

